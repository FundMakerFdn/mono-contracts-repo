{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": true,
		"declaration": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"inlineSources": true,
		"pretty": true,
		"outDir": "./dist"
	},
	"compileOnSave": true,
	"include": [
	"src/**/*",
	"src/*"
  ],
  "exclude": [
	"node_modules",
	"./dist"
  ]
}
